generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id @default(uuid())
  name String
  cpf String @unique
  saldo Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  modificationHistory Json
}

model logs {
  id String @id @default(uuid())
  userId String
  saldoAntigo Float
  saldoNovo Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TransferHistory {
  id String @id @default(uuid())
  userId String
  valor Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}